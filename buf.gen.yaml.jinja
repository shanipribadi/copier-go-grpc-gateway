version: v1
managed:
  enabled: true
  go_package_prefix:
    default: {{module_path}}/gen
    except:
      - buf.build/googleapis/googleapis
plugins:
  - plugin: buf.build/grpc-ecosystem/gateway:v2.22.0
    out: gen
    opt:
      - paths=source_relative
  - plugin: buf.build/grpc-ecosystem/openapiv2:v2.22.0
    out: docs/api
  - plugin: buf.build/grpc/go:v1.5.1
    out: gen
    opt: 
      - paths=source_relative
  - plugin: buf.build/protocolbuffers/go:v1.35.1
    out: gen
    opt: 
      - paths=source_relative
